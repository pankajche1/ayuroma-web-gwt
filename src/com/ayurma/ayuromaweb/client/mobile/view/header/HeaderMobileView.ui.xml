<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
	>
	<ui:with field='resource' type='com.ayurma.ayuromaweb.client.view.resource.header.HeaderClientBundle' ></ui:with>
	<ui:with field='res' 
    	type='com.ayurma.ayuromaweb.client.mobile.view.resource.MainClientBundleMobile'>
	</ui:with>
	<ui:style>
		.leftWidget{
			position:relative;
			top:17px;
		}
		.logoSpace{
			position:relative;
			left:2px;
			top:3px;
	 

    
   		
    

	   
	}	
		.companyName{
	   font-family:Georgia,Utopia,'Palatino Linotype',Palatino,serif;
	   font-size:16pt;
	   letter-spacing:0.1em;
	   color:#666;
	   /*float:left;*/
	   /*float:right;*/
	   padding: 1px;
	   border-bottom: 1px solid #ccc;
	   position:relative;
	   left:40px;
	   top:-35px;
	   text-shadow:1px 2px 3px rgba(0, 0, 0, 0.2);	
	}
	.leftWidget p{
	   font-family:arial;
	   font-size:8pt;
	   letter-spacing:0.2em;
	  /* text-align:right;*/
	  	position:relative;
	  	left:40px;
	  	top:-35px;
		color:rgb(51, 102, 153);

	}
	.companyTitle{
	 font-family:Georgia,Utopia,'Palatino Linotype',Palatino,serif !important;
	 color:#666 !important;
         text-shadow:1px 2px 3px rgba(0, 0, 0, 0.2);	
          letter-spacing:0.1em;

	
	}
	 .headerPanel{
       
      
        background-color: #eee !important;
        /*background: -moz-linear-gradient(top, #555, #222) !important;*/  
        
        border-bottom: 1px solid #ccc !important;
        border-top:2px solid rgb(51, 102, 153) ;
       
        /*box-shadow:0px 3px 5px 0px #000 !important;*/
       
        
        
	 }
	 .navButton{

  			margin-bottom:2px;
			/*background-color:#111;*/
			background:none;
  			padding: 5px 7px;
  			text-decoration: none;
  			cursor: pointer;
  			cursor: hand;
  			font-size:small;
  			
  			border:0px solid #bbb;
  			
  			/*color:#222;*/
			color:rgb(51, 102, 153)	
 			
		
		}	
		
		.logoImage{
			margin-left:2px;
	}
	</ui:style>
	
	<mgwt:header.HeaderPanel addStyleNames="{style.headerPanel}">
		<g:Image resource='{resource.logo3}' width='35px' height='35px' styleName="{style.logoImage}"/>
		<!-- 
		<g:HTMLPanel styleName="{style.leftWidget}">
			<div class="{style.logoSpace}">
				<g:Image resource='{resource.logo3}' width='35px' height='35px'></g:Image>
			</div>
			<h1 class="{style.companyName}">Ayuroma Centre</h1>
	       		<p>Natural flavours and fragrances</p>
		</g:HTMLPanel>
		 -->
     	<mgwt:panel.flex.FixedSpacer/>
     	
     	<mgwt:panel.flex.FlexSpacer/>
     	
     	<mgwt:header.HeaderTitle text="No Label" ui:field="headerTitle" addStyleNames="{style.companyTitle}"/>
     	
     	
     	
     	
     	<mgwt:panel.flex.FlexSpacer/>
     	<mgwt:button.Button text="No Label" ui:field="btnRight" styleName="{style.navButton}"/>
     </mgwt:header.HeaderPanel>
	
</ui:UiBinder> 