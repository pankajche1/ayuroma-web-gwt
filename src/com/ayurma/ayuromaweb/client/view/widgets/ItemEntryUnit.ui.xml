<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rootPanel{

        }
		.heading{
	       margin:5px 0;
	       font-size:12pt;
	       font-weight:bold;
	       text-align:left;
	       border-bottom:1px dotted #050;
	       
	   }
	   .content{
          text-align:left;
           margin:0;
       }
	</ui:style>
	<g:FocusPanel ui:field='rootPanel'>
	   <g:HTMLPanel>
	    <g:Image ui:field='img'></g:Image>
	    <g:Label ui:field='lblHeading' styleName="{style.heading}"></g:Label>
	    <g:HTMLPanel  styleName="{style.content}" ui:field='contentPanel'></g:HTMLPanel>
	    </g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 