<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rootPanel{
			margin-bottom:5px;
			border:1px solid #ccc;
			border-radius:10px;
			background-color:#ccd;
			padding:5px;

        }
		.heading{
	        padding:5px;
	       font-size:12pt;
	       font-weight:bold;
	       text-align:left;
	       border-bottom:1px dotted #050;
		   color:#222;
	       
	   }
	   .content{
          text-align:left;
          padding:5px;
		  color:#222;
       }
	   .linkVisit{
			line-height:20px;
			
			color:#eee;
			background-color:#9a9;
			border-radius:10px;
			width:75px;
			cursor:hand;
			cursor:pointer;
			text-align:center;
	     
	       -moz-box-shadow:1px 1px 2px rgba(0,0,0,.75); 
           -webkit-box-shadow:1px 1px 2px rgba(0,0,0,.75); 
           box-shadow:1px 1px 2px rgba(0,0,0,.75); 
		}
	</ui:style>
	<g:HTMLPanel ui:field='rootPanel' styleName="{style.rootPanel}">
	   <g:HTMLPanel>
	    <g:Image ui:field='img'></g:Image>
	    <g:Label ui:field='lblHeading' styleName="{style.heading}"></g:Label>
	    <g:HTMLPanel  styleName="{style.content}" ui:field='contentPanel'></g:HTMLPanel>
	    <g:HTML ui:field='linkVisit' styleName="{style.linkVisit}">Visit</g:HTML>
	    <!-- 
	    <g:Button ui:field='btnVisit'>Visit</g:Button>
	     -->
	    </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 