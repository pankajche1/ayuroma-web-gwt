<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field='cssGlobal' src='./resource/css/adminCssGlobal.css'/>
	<ui:style type='com.ayurma.ayuromaweb.client.admin.view.BrowseProductsViewImpl.Style'>
		.rootPanel{
	padding:5px;
}
.mainPanel{
	margin-top:10px;
}
/* left panel for containing group information data */
.leftPanel{
	float:left;
	width:500px;
	min-height:500px;
	padding:5px;
	border:1px solid #ccc;
}
.leftPanelButtonsPanel{
    padding:5px;
    border:1px solid #ccc;	
}
/* right panel styles */
.rightPanel{
	float:left;
	padding:5px;
	margin-left:10px;
	border:1px solid #ddd;
	min-height:500px;
	width:400px;
}
/* styles of the right panel */
.rightPanelButtonsPanel1{
	padding:5px;
	border:1px solid #cdc;
	background-color:#efe;
	margin-bottom:5px;
	
}
.rightPanelButtonsPanel2{
    padding:5px;
    border:1px solid #ccc;
    
}
.productsDataPanel{
    padding:5px;
    border:1px solid #ccc;	
}
.productUnit{
	height:35px;
	width:60%;
	padding:5px;
}
/* the current product in the group */
.curProduct{
	padding:5px;
	background-color:#eee;
	margin:2px 0;
}
/* floating styles */
.floatRight{
	float:right;
}
.clearBoth{
	clear:both;
}
/* various */
.evenRow{
	background-color:#dde;
}
.oddRow{
	background-color:#eef;
}
	


.heading1{
    font-size:16pt;
    font-weight:bold;
    padding:5px;
}
.heading2{
	font-size:14pt;
	font-weight:bold;
	padding:5px;
}
.textMessage{
	padding:5px;
	font-size:12pt;
	
}
/* the panel that contains delete, edit, edit details buttons on each product */
.buttonsPanel{
	float:right;
}
		.noProduct{
			/*width:200px;*/
			height:200px;
			/*background-color:#eef;*/
			font-family:Georgia,Utopia,'Palatino Linotype',Palatino,serif;
			color:#fff;
			text-shadow:1px 2px 3px rgba(0, 0, 0, 0.2);
			text-align:center;
			font-size:30pt;
			line-height:200px;
		}
	</ui:style>
	<g:HTMLPanel>
	
	<g:Label styleName="{cssGlobal.sectionHeading}">Browser Products</g:Label>
	<g:HTMLPanel styleName="{style.mainPanel}">
	        <g:HTMLPanel styleName="{style.rightPanelButtonsPanel1}">
	           
	            <g:InlineLabel>Page Number:</g:InlineLabel>
	            <g:TextBox ui:field="txtPageNumber" width='20px'>1</g:TextBox>
	            <g:InlineLabel>Items per page:</g:InlineLabel>
	            <g:ListBox ui:field='lbItemsPerPage' selectedIndex='5'>
	            	<g:item value='5'>5</g:item>
        	 		<g:item value='10'>10</g:item>
        	 		<g:item value='15'>15</g:item>
        	 		<g:item value='20'>20</g:item>
        	 		<g:item value='25'>25</g:item>
        	 		<g:item value='50'>50</g:item>
        	 		<g:item value='100'>100</g:item>
	            
	            </g:ListBox>
                
	            <g:Button ui:field="btnLoadProducts">Load Products</g:Button>
	            <g:Button ui:field="btnClearCacheProducts" addStyleNames="{style.floatRight}">Clear cache</g:Button>
	           <!--  <g:Button ui:field="btnRefreshProducts">Refresh</g:Button> -->
	          </g:HTMLPanel>
	             <!-- 
	            <g:HTMLPanel styleName="{style.rightPanelButtonsPanel2}">
	                <g:InlineLabel>Add the selected products to the current group:</g:InlineLabel>
	                <g:Button ui:field="btnAddProducts">Go</g:Button>
	            </g:HTMLPanel>
	             -->
	       
	<g:Label ui:field="lblMessage" styleName="{style.textMessage}"></g:Label>
	<g:HTMLPanel styleName="{style.productsDataPanel}">
		<g:HTMLPanel ui:field='noProductNotePanal' styleName="{style.noProduct}">No Product to display</g:HTMLPanel>
		<g:HTMLPanel ui:field="productsDataPanel"></g:HTMLPanel>
	</g:HTMLPanel>
	<!--  this is not to be shown in a standalone browser mode -->
	<g:HTMLPanel ui:field='bottomBtnsPanel' visible='false'>
    	<g:Button ui:field='btnCancelBrowser'>Cancel</g:Button>
    	<g:Button ui:field='btnOk'>Ok</g:Button>
    </g:HTMLPanel>
    </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 