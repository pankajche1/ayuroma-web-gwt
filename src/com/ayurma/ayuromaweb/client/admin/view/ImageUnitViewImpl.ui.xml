<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.rootPanel{
	     padding:5px;
	     border:1px solid #ccc;
	     margin-bottom:5px;
	     display:inline-block;
	     margin:2px;
	   }
	   .btnPanel{
	       padding:5px;
	  }
	  .imageInfo{
	       padding:2px;
	       text-align:center;
	
	  }
	</ui:style>
	<g:FocusPanel ui:field = 'rootPanel' styleName='{style.rootPanel}'>
	    <g:HTMLPanel>
		<g:HTMLPanel ui:field='imagePanel'>
	
		</g:HTMLPanel>
		<g:Label ui:field="lblImageInfo" styleName='{style.imageInfo}'></g:Label>
		<g:HTMLPanel ui:field='bottomPanel' styleName='{style.btnPanel}'>
			<!-- <g:Button ui:field='btnCopy'>Copy</g:Button> -->
			<g:Button ui:field='btnDelete'>Delete</g:Button>
		</g:HTMLPanel>
		</g:HTMLPanel>
	</g:FocusPanel>
</ui:UiBinder> 